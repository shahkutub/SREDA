<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Project Name"
            android:gravity="center"
            android:background="@drawable/tv_bg"/>

        <TextView
            android:id="@+id/tvTechnology"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Technology Type"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_bg"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Capacity(MW)"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Location"
            android:gravity="center"
            android:background="@drawable/tv_bg"/>

        <TextView
            android:id="@+id/tvFinance"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Finance"
            android:gravity="center"
            android:background="@drawable/tv_bg"/>
        <TextView
            android:id="@+id/tvCompDate"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Completion Date"
            android:gravity="center"
            android:background="@drawable/tv_bg"/>
        <TextView
            android:id="@+id/tvPresentStatus"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15sdp"
            android:textColor="@color/black"
            android:text="Present Status"
            android:gravity="center"
            android:background="@drawable/tv_bg"/>
    </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>